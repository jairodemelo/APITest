@{
}
@model IEnumerable<CustomerSimplifyedViewModel>
<div class="row">
    <div class="col-md-12">
        <h4>Customer List</h4>
        <br />
    </div>
</div> 
<div class="row">
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-10">
                <input class="form-control" type="text" name="search" placeholder="Type to search" />
            </div>
            <div class="col-md-2">
                <input class="btn btn-success float-right" type="submit" value="Search" />
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <input class="btn btn-success float-right" type="submit" value="New"/>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Document Number</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.CPF</td>
                        <td>@item.Name</td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>