@{
}
@model CustomerViewModel
<form method="post">
    @Html.HiddenFor(m => m.Id)

    <div class="row">
        <div class="col-md-12">
            <h4>Update Customer</h4>
            <br />
        </div>
    </div>
    @** Error Message *@
    @if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
    {
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-danger">
                    <strong>Error:</strong><br />
                    @ViewBag.ErrorMessage
                </div>
            </div>
        </div>
    }
    @** /Error Message *@
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-6">
                    <span>CPF:</span>
                    @Html.TextBoxFor(m => m.CPF, new { Class = "form-control", placeholder = "___.___.___-__", Readonly= "Readonly" })
                </div>
                <div class="col-md-6">
                    <span>Name:</span>
                    @Html.TextBoxFor(m => m.Name, new { Class = "form-control" })
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <input type="submit" class="btn btn-success float-right" value="Save" />
        </div>
    </div>
</form>